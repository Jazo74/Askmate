<h1>Stop making lists!</h1>
<hr />
@model List<Transit> 
<h6>Questions</h6>
<br />
@{ if (Model.Count != 0)
    {
        <table class="tablazat">
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Votes</th>
                <th>Views</th>
                <th>Created</th>
            </tr>
                @{
                    foreach (Transit item in Model)
                    {
                            <tr>
                                <td>@item.Qid</td>
                                <td><a asp-controller="Questions" asp-action="ShowQe" asp-route-qid=@(item.Qid)>@item.Qtitle</a></td>
                                <td>@item.Qvote</td>
                                <td>@item.Qview</td>0
                                <td>@item.QsubmissionTime</td>
                            </tr>
                    }
                }
        </table>
    }
    else
    {
        <p>There are no questions!</p>
    }
}



