@model Transit 
<h1>EditQuestion</h1>

<form method="post" asp-controller="Questions" asp-action="EditQuestion3">

    <label for="editQuestionId">ID:</label>
    <br/>
    <textarea class="inactive-input" id="editQuestionId" name="editId" rows="1" cols="50" readonly>@Model.Qid</textarea>
    <br/>
    <label for="editQuestionTitle">Title:</label><br/>
    <textarea id="editQuestionTitle" name="editTitle" rows="1" cols="50">@Model.Qtitle</textarea>
    <br/>
    <label for="editQuestionText">Text:</label><br/>
    <textarea id="editQuestionText" name="editText" rows="1" cols="80" >@Model.Qtext</textarea>
    <br />
    <br />
    <input type="submit" value="Edit question"/>
</form>