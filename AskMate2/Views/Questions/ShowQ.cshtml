<h1>Stop making lists!</h1>
<hr />
@model List<Transit>
<h2>Questions</h2>

<br />
@{ if (Model.Count != 0)
    {
        <form method="post" asp-controller="Questions" asp-action="VoteForQuestion">
            <input type="hidden" name="qId" value="@Model[0].Qid" />
            <input type="submit" value="Vote for this question" />
        </form>
        <form method="post" asp-controller="Questions" asp-action="image">
            <input type="hidden" name="qId" value="@Model[0].Qid" />
            <input type="submit" value="Vote for this question" />
        </form>
        <br />
        <table class="tablazat">
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Question</th>
                <th>Votes</th>
                <th>Views</th>
                <th>Created</th>
            </tr>
            @{
                foreach (Transit item in Model)
                {
                    <tr>
                        <td>@item.Qid</td>
                        <td>@item.Qtitle</td>
                        <td>@item.Qtext</td>
                        <td>@item.Qvote</td>
                        <td>@item.Qview</td>
                        <td>@item.QsubmissionTime</td>
                    </tr>
                }
            }
        </table>
        if (Model[0].Qimage != null)
        {
            <br />
            <image src="@Model[0].Qimage"></image>
        }
    }
    else
    {
        <p>There are no questions!</p>
    }
}



