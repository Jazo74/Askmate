<h1>Question</h1>
<hr />
@model List<Transit>
@{ 
    if (Model.Count != 0)
    {
        
        <ul>
            <li>QID: @Model[0].Qid</li>
            <li>Title: @Model[0].Qtitle</li>
            <hr class="line-1" />
            <li>Qestion: @Model[0].Qtext</li>
        </ul>
        
    }
    else
    {
        <p>There is no such question!</p>
    }
}


