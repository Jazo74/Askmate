
@{
    ViewData["Title"] = "EditQuestion";
}
@model List<Transit> 
<h1>EditQuestion</h1>

<form method="post" asp-controller="Questions" asp-action="EditQuestion">

    <label for="editQuestionId">ID:</label>
    <br/>
    <textarea id="editQuestionId" name="editId" rows="1" cols="50" >@Model[0].Qid</textarea>
    <br/>
    <label for="editQuestionTitle">Title:</label><br/>
    <textarea id="editQuestionTitle" name="editTitle" rows="1" cols="50">@Model[0].Qtitle</textarea>
    <br/>
    <label for="editQuestionText">Text:</label><br/>
    <textarea id="editQuestionText" name="editText" rows="1" cols="80" >@Model[0].Qtext</textarea>

    <input type="submit" value="Edit question"/>
</form>